<h1>Rake Tasks</h1>

<hr >


<%= link_to "Show all tasks", rake_tasks_path(show_all: "yes") %>
<%= link_to "Show only internal tasks", rake_tasks_path %>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <tr>
    <td>name</td>
    <td>arg description</td>
    <td>full comment</td>
    <td>custom?</td>
  </tr>
  <% @rake_tasks.each do |rake_tasks| %>
    <tr>
      <td><%= link_to rake_tasks.name_with_args, rake_task_path(rake_tasks.id) %></td>
      <td><%= rake_tasks.arg_description %></td>
      <td><%= rake_tasks.full_comment %></td>
      <td><%= rake_tasks.is_internal_task %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
